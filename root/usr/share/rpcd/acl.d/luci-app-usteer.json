{
  "luci-app-usteer-ng": {
    "description": "Grant UCI access to LuCI app usteer-ng",
    "read": {
      "ubus": {
        "uci": [ "get" ],
        "usteer": [ "remote_info","remote_hosts", "local_info", "get_clients"],
        "luci-rpc": [ "getHostHints" ],
        "network.rrdns": [ "lookup" ]
      },
      "uci": [
        "usteer"
      ]
    },
    "write": {
      "ubus": {
        "uci": [ "set", "commit"  ]
      },
      "uci": [ "usteer" ]
    }
  }
}
